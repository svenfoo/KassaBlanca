.row
  .col-md-3
  .col-md-6
    =simple_form_for @ticket do |f|
      .panel.panel-default
        .panel-heading
          %h3.panel-title New ticket

        .panel-body
          =f.input :name
          =f.input :pseudonym
          =f.input :email
          =f.input :password
          =f.input :price
          =f.input :role
          =f.input :notes

        .panel-footer
          .form-actions
            =f.submit "Create ticket", class: 'btn btn-primary'
            =link_to "Cancel", root_path, class: 'btn'
